<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=title%>
    </title>
    <script src="https://kit.fontawesome.com/595b1dac94.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
     <h1>To Do App</h1>
   
    <form action="/create-todo" method="post">
        <div class="addTaskBox">
            <div class="form__group field">
                <input required="" placeholder="Add  Task" class="form__field" type="input">
                <label class="form__label" for="addTask">Add Task</label>
            </div>
            <span>
                <select name="category" id="category">
                    <option value="">Select a Category</option>
                    <option value="alert">Alert</option>
                    <option value="personal">Personal</option>
                    <option value="work">Work</option>
                    <option value="college">College</option>
                    
                   
                </select>
                <input type="date" name="date">
             <button type="submit">
                Add Todo
             </button>
             
            </span>
            
        </div>
        
    </form>
     
    <ul>
        <% for(let i of todos){%>
        <li>
            <input type="checkbox" id="toggle">
           <p ><%=i.task%></p> 
           <p><%=i.date%></p> 
            <p><%=i.category%></p>
          <div class="delete-button">
            <a href="/delete-task/?id=<%= i._id %>">
                <i class="fa-solid fa-trash-arrow-up"></i>
            </a>
          </div>
        </li>
        <%}%>
    </ul>
    
    <!-- <div class="bg-img">
      
        <img src="/images/bg-img.png" alt="">
    </div> -->

</body>
</html>